{
  "name": "@blendsdk/schemakit",
  "version": "0.9.0",
  "description": "A PostgreSQL schema and related TypeScript type generator",
  "main": "dist/index.js",
  "author": "Gevik Babakhani <gevikb@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/blendsdk/schemakit.git"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "typescript",
    "code gen"
  ],
  "bin": {
    "schemakit":"./dist/generator.js"
  },
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -fR ./dist && tsc",
    "watch": "rm -fR ./dist && tsc -w ",
    "fiddle": "node ./dist/fiddle.js",
    "test": "jest --detectOpenHandles",
    "patch-publish": "is_git_branch master && yarn build && yarn publish --patch --access public && git push origin master --tags"
  },
  "dependencies": {
    "@blendsdk/stdlib": "^1.0.4",
    "chalk": "^2.4.2",
    "ejs": "^2.6.2",
    "pg": "^7.11.0",
    "tslib": "^1.10.0",
    "yargs": "^13.2.4",
    "yesql": "^3.2.2"
  },
  "devDependencies": {
    "@blendsdk/git": "^1.0.3",
    "@types/ejs": "^2.6.3",
    "@types/jest": "^24.0.15",
    "@types/pg": "^7.4.14",
    "@types/yargs": "^13.0.0",
    "@types/yesql": "^3.2.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "@types/chalk": "^2.2.0"
  }
}
